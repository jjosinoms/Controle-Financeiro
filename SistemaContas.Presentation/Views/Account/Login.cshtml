@model SistemaContas.Presentation.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-5">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Login</h1>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="mb-2 d-grid">
                        <label for="staticEmail2" class="visually-hidden">Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "E-mail" })
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                        </span>
                    </div>
                    <div class="mb-2 d-grid">
                        <label for="inputPassword2" class="visually-hidden">Password</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control", @placeholder = "Senha" })
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Senha)
                        </span>
                    </div>
                    <div class="mb-2 d-grid">
                        <button type="submit" class="btn btn-success mb-3">Entrar</button>
                    </div>
                    <div class="mb-2 d-grid">
                        <a href="/Account/Register" class="btn btn-light">
                            Não possui conta? <strong>Cadastre-se aqui!</strong>
                        </a>
                        <a href="/Account/PasswordRecover" class="btn btn-light"> Esqueceu a senha?</a>
                    </div>
                    <div class="mt-2 text-center">
                        <small>JonzTech - Asp.Net MVC</small>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

