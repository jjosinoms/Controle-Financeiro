@model SistemaContas.Presentation.Models.CategoriaViewModel
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card mt-5">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1>Cadastrar Categoria</h1>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="mb-2 d-grid">
                            <label for="staticEmail2" class="visually-hidden">Nome</label>
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome" })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Nome)
                            </span>
                        </div>
                        <div class="mb-2 d-grid">
                            <button type="submit" class="btn btn-primary mb-3">Cadastrar Nova Categoria</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
